---
import * as path from "path"
interface Props {
    src: string
}
const { src } = Astro.props
const mime = `audio/` + path.extname(src).slice(1)
---

<div>
    <audio controls loop="false" preload="metadata">
        <source src={src} type={mime} />
        Your browser does not support the audio element.
    </audio>
</div>
